#include "interface.h"

int main(void)
{
  unsigned int i;
  printf("Input number:\n");
  scanf("%u", &i); // Scan in as unsigned int
  // Keep printing options until user enters 5
  while (1)
  {
    print_options(); // Print menu options
    int choice;
    scanf("%d", &choice);
    if (choice == 1)
    { // Print the number in the selected base
      display(i);
    } else if (choice == 2) { // Use EXOUTER macro to swap bytes 3 and 0
      printf("number before:\n");
      display(i);
      i = XOUTER(i);
      printf("number after:\n");
      display(i);
    } else if (choice == 3) { // Use XINNER macro to swap bytes 2 and 1
      printf("number before:\n");
      display(i);
      i = XINNER(i);
      printf("number after:\n");
      display(i);
    } else if (choice == 4) { // count_set function accepts one byte at a time
      printf("byte 3 count: %d ", count_set(GET_THIRD_BYTE(i)));
      printf("byte 2 count: %d ", count_set(GET_SECOND_BYTE(i)));
      printf("byte 1 count: %d ", count_set(GET_FIRST_BYTE(i)));
      printf("byte 0 count: %d\n", count_set(GET_ZEROTH_BYTE(i)));
    } else if (choice == 5) {
      break;
    } else {
      printf("Command not recognized\n");
    }
  }

  return 0;
}
